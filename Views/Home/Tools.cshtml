@model EddiesHikingStore.Models.MySession

@{
    ViewData["Title"] = "Tools";
}

<h2>Session Variables</h2>
<p>This page displays session state information when button clicked</p>

<form asp-action="DisplaySessionVariables" method="post">
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Course">Course</label>
        <input asp-for="Course" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="FavNum">Favorite Number</label>
        <input asp-for="FavNum" class="form-control" readonly />
    </div>
    <div class="form-group">
        <input type="submit" value="Display Session Variables" class="btn btn-primary" />
    </div>
</form>

<form asp-action="ClearSessionVariables" method="post">
    <div class="form-group">
        <input type="submit" value="Clear" class="btn btn-success" />
    </div>
</form>